# ESP32-S3 USB Keyboard with WiFi Provisioning Configuration
CONFIG_IDF_TARGET_ESP32S3=y

# Enable TinyUSB HID support
CONFIG_TINYUSB_HID_COUNT=1
CONFIG_TINYUSB_CDC_COUNT=0
CONFIG_TINYUSB_MSC_ENABLED=n

# Enable Bluetooth for WiFi Provisioning
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y

# WiFi Provisioning Configuration
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions_custom.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions_custom.csv"

# Enable custom NVS partition for SSH keys
CONFIG_NVS_ENCRYPTION=n
CONFIG_NVS_DEFAULT_NAMESPACE_ENCRYPTION=n

# WiFi Configuration
CONFIG_ESP_WIFI_ENABLED=y
CONFIG_ESP_WIFI_SCAN_CACHE_AUTH_TIME=30

# Network Configuration
CONFIG_LWIP_NETIF_API=y
CONFIG_MBEDTLS_THREADING_C=y
CONFIG_MBEDTLS_THREADING_ALT=n
CONFIG_MBEDTLS_THREADING_PTHREAD=y

# Memory Configuration
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192